<%- model_class = OutMessage -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:from) %></th>
      <th><%= model_class.human_attribute_name(:to) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:timestamp) %></th>
      <th><%= model_class.human_attribute_name(:message_date) %></th>
      <th><%= model_class.human_attribute_name(:message_id) %></th>
      <th><%= model_class.human_attribute_name(:error_text) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:in_message_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @out_messages.each do |out_message| %>
      <tr>
        <td><%= link_to out_message.id, out_message_path(out_message) %></td>
        <td><%= out_message.from %></td>
        <td><%= out_message.to %></td>
        <td><%= out_message.type %></td>
        <td><%= out_message.text %></td>
        <td><%= out_message.timestamp %></td>
        <td><%= out_message.message_date %></td>
        <td><%= out_message.message_id %></td>
        <td><%= out_message.error_text %></td>
        <td><%= out_message.status %></td>
        <td><%= out_message.in_message_id %></td>
        <td><%=l out_message.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_out_message_path(out_message), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      out_message_path(out_message),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_out_message_path,
            :class => 'btn btn-primary' %>
